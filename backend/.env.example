# ============================================
# VARIABLES DE ENTORNO - PLANTILLA
# ============================================

# ============================================
# ENCRIPTACIÓN DE CERTIFICADO EN BD
# ============================================
# Generar con uno de estos comandos:
# - Node.js: node backend/scripts/generate-encryption-key.js
# - Linux/Mac: openssl rand -hex 32
# - PowerShell: [System.Convert]::ToHexString([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
ENCRYPTION_KEY=<REEMPLAZA_CON_CLAVE_32_BYTES_HEX>

# Usar Base de Datos para almacenar certificado (true = recomendado, false = archivo)
USAR_BD_PARA_CERTIFICADO=true

# ============================================
# CONFIGURACIÓN AFIP
# ============================================
AFIP_CUIT=20123456789
AFIP_FABRICANTE=SE
AFIP_WSAA_URL=https://wsaa.afip.gov.ar/ws/services/LoginCms
AFIP_WSCERT_WSDL=https://servicios1.afip.gov.ar/wscert/service
AFIP_CERT_PATH=backend/certs/certificado.pfx
AFIP_KEY_PASSWORD=tu_contraseña_certificado_pfx
AFIP_ROOT_PATH=backend/certs/Root_RTI.txt

# ============================================
# CONFIGURACIÓN BASE DE DATOS PostgreSQL
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=tu_contraseña_postgres
DB_NAME=db_sersa
DB_SSL=false

# ============================================
# CONFIGURACIÓN APLICACIÓN
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# AUTENTICACIÓN JWT
# ============================================
JWT_SECRET=tu_secret_jwt_muy_largo_y_seguro
JWT_EXPIRATION=24h

# ============================================
# RATE LIMITING / THROTTLING
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

